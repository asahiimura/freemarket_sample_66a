= render partial: 'layouts/header'
.c-container
  = render partial: 'posts/sidemenu'
  .c-container__form
    %label{class: "card-title"} クレジットカード情報入力
    .c-container__form__inner 
      .c-container__form__inner__top
        %label{class: "card-number"} カード番号
        %span.c-container__form__inner__top__label 必須
        .c-container__form__inner__top__content
          %input.card__input.number{maxlength: "19", name: "number", placeholder: "半角英数字のみ", type: "text", value: "",id: "payment_card_no",required: "required"}
          %ul.card-list
            %li.card-list__image
              = image_tag "/images/material/logo/credit-card.png"
        
      .c-container__form__inner__middle
        %label{class: "card-date"} 有効期限
        %span.c-container__form__inner__middle__label 必須
        .c-container__form__inner__middle__date-form
          %select#c-container__form__inner__middle__date-form.exp_month{maxlength: "2",name: "exp_month", placeholder: "月", type: "text",required: "required"}
            %option{value: "01"} 01
            %option{value: "02"} 02
            %option{value: "03"} 03
            %option{value: "04"} 04
            %option{value: "05"} 05
            %option{value: "06"} 06
            %option{value: "07"} 07
            %option{value: "08"} 08
            %option{value: "09"} 09
            %option{value: "10"} 10
            %option{value: "11"} 11
            %option{value: "12"} 12
          %span 月
          %select#c-container__form__inner__middle__date-form.exp_year{maxlength: "4",name: "exp_year", placeholder: "年", type: "text",required: "required"}
            %option{value: "2020"} 20
            %option{value: "2021"} 21
            %option{value: "2022"} 22
            %option{value: "2023"} 23
            %option{value: "2024"} 24
            %option{value: "2025"} 25
            %option{value: "2026"} 26
            %option{value: "2027"} 27
            %option{value: "2028"} 28
            %option{value: "2029"} 29
            %option{value: "2030"} 30
          %span 年
      .c-container__form__inner__bottom
        %label{class: "seq-cord"} セキュリティコード
        %span.c-container__form__inner__bottom__label 必須
        .c-container__form__inner__seqcode
          %input.card__input.number{maxlength: "4", name: "number", placeholder: "カード背面4桁もしくは3桁の番号", type: "text", value: "",id: "payment_card_no",required: "required"}
      .c-container__form__inner__seq 
        %span.c-container__form__inner__seq__label  
          = link_to "#" do
            カード裏面番号とは？
      %button.c-container__form__inner__btn{type: "submit"} 登録する
= render partial: 'layouts/footer'