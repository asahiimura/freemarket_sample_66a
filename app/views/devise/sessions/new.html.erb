<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field-first">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス", :class=> "input-email-for-login" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", :placeholder => "パスワード" %>
    <a class="forget-password">＞パスワードをお忘れの方</a>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field-checkbox">
      <%= f.check_box :remember_me %>
      <label for="user_remember_me">ログイン情報を記録する</label>
    </div>
  <% end %>

  <div class="field">
    <%= f.submit "ログイン", :class=> "btn-next" %>
  </div>

  <div class="field-no-account">
    <p>会員登録がまだの方はこちら</p>
    <div class="btn-no-account">
      <%= link_to "新規会員登録", "sign_up", :class=> "btn-no-account" %>
    </div>
  </div>

<% end %>

