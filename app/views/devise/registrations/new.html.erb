<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ニックネーム %>
    <span class="plate-required">必須</span>
    <%= f.text_field :nickname, autofocus: true, :placeholder => "例）フリマ太郎" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <span class="plate-required">必須</span>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "PC・携帯どちらでも可" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <span class="plate-required">必須</span>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", :placeholder => "7文字以上の半角英数字" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %>
    <span class="plate-required">必須</span>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "コピー・貼り付けはしないでください" %>
  </div>

  <div class="field">
    <%= f.label :お名前（全角） %> <span class="plate-required">必須</span><br />
    <%= f.text_field :last_name, autofocus: true, :placeholder => "例) 大阪" %>
    <%= f.text_field :first_name, autofocus: true, :placeholder => "例) 花子" %>
  </div>

  <div class="field">
    <%= f.label :お名前カナ（全角） %> <span class="plate-required">必須</span><br />
    <%= f.text_field :last_furigana, autofocus: true, :placeholder => "例) オオサカ" %>
    <%= f.text_field :first_furigana, autofocus: true, :placeholder => "例) ハナコ" %>
  </div>

  <div class="field">
    <%= f.label :生年月日 %><br />
    <%= f.text_field :birth_year, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :birth_month %><br />
    <%= f.text_field :birth_month, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :birth_day %><br />
    <%= f.text_field :birth_day, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>
    <span class="plate-required">必須</span>
    <%= f.telephone_field :phone_number, autocomplete: true %>
  </div>

  <div class="field">
    <%= f.telephone_field :phone_number, autocomplete: true %>
  </div>

  <div class="field">
    <%= f.telephone_field :phone_number, autocomplete: true %>
  </div>

  

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

